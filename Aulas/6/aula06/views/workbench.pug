extends layout

block content
    script(src='/javascripts/jquery-3.3.1.min.js')
    script(src='/javascripts/pedidos.js')
    div(class='w3-container w3-center w3-teal')
        header(class='w3-container w3-center w3-teal')
            h1 Interrogando SPARQL endpoints
    div(class='w3-row')
        div(class='w3-col s6 w3-padding')
            div(class='w3-container w3-border w3-light-grey')
                header(class='w3-container')
                    h4 Input:
            div(class='w3-container w3-border')
                textarea(rows='10' cols='50' class='w3-input' placeholder='INPUT SPARQL QUERY HERE' name='intext')
                div(class='w3-bar w3-pale-green')
                    div(class='w3-bar-item w3-button' id='proc') Processar
                    div(class='w3-bar-item w3-button' id='nova') Nova query
        div(class='w3-col s6 w3-padding')
            div(class='w3-container w3-border w3-light-grey')
                header(class='w3-container')
                    div(class='w3-button w3-teal w3-right' id='limpa') Limpar resultados
                    h4 Resultados:
            div(class='w3-code w3-border' id='resultado')
            div(class='w3-button w3-teal' id='limpa') Limpar resultados
    div(class='w3-container')
        footer(class='w3-container w3-teal')
            address Gerado webSPARQL :: PRC2018 :: 2018-04-09